<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="345dp"
    android:background="@color/cardview_dark_background"
    android:padding="5dp"
    android:layout_gravity="center"
    android:orientation="vertical">
   <LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_dark_background"
    android:padding="5dp"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contract Address Information"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/exit_popup"
        android:onClick="closeContractPopup"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:textColor="@color/white"
        android:text="x"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginStart="25dp"
        android:background="@drawable/circle"/>
   </LinearLayout>
        <TextView
            android:justificationMode="inter_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/this_application_uses_contract_addresses_to_identify_a_cryptocurrency_on_a_specific_blockchain_to_find_a_contract_address_visit_the_respective_blockchain_explorer_and_search_for_the_token_name_the_contract_address_should_be_displayed_on_that_page_n_n"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="10dp"
            android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        android:text="Some Common Explorers"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:justificationMode="inter_word"
        android:layout_margin="10dp"
        android:paddingStart="30dp"

        android:text="• Etherscan"
        android:textSize="10dp"
        android:textColor="#FFFFFF"/>
    <TextView
        android:onClick="setLinks"
        android:id="@+id/bscscanlink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:justificationMode="inter_word"
        android:layout_margin="10dp"
        android:paddingStart="30dp"

        android:text="• Bscscan"
        android:textSize="10dp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:justificationMode="inter_word"
        android:layout_margin="10dp"
        android:paddingStart="30dp"

        android:text="• Polygonscan"
        android:textSize="10dp"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:justificationMode="inter_word"

        android:padding="20dp"

        android:text="@string/contract_addresses_can_also_be_found_on_websites_such_as_coinmarketcap_coingecko_etc"
        android:textSize="10dp"
        android:textColor="#FFFFFF"/>

</LinearLayout>




